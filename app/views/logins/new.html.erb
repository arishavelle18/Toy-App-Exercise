<h1>Login</h1>
<%= form_with model:@user,url:login_path,data:{turbo:false},method: :post do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.email_field :email,:class=>"form-control",placeholder:"karl@example.com"%>
    </div>
    <div class="mb-3">
        <%= form.label :password%>
        <%= form.password_field :password,:class=>"form-control",placeholder:"password"%>
        <%= link_to "Forgot your password?","#" %>
    </div>
    <div class="mb-3">
        <%= form.submit("Login",{:class => "btn btn-primary"})%>
    </div>

<% end %>