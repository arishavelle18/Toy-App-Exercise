<h1>Microposts</h1>
<table>
    <tr>
        <th>Content</th>
        <th>User</th>
        <th></th>
    </tr>
 <% @microposts.each do |micropost| %>
  <tr>
    <td><%= micropost.content%></td>
    <td><%= micropost.user_id%></td>
    <td>
        <%= link_to "Show",micropost_path(micropost)%>
        <%= link_to "Edit",edit_micropost_path(micropost)%>
        <%= link_to 'Destroy',micropost_delete_path(micropost), method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to "New Micropost",micropost_new_post_path%>