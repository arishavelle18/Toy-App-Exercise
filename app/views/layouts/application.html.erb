  .red{
    color:red;
  }

  </style>
  </head>
  
  <body class="container">  
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
    <div class="container">
      <%= yield %>
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js">
  </body>

</html>
