<h1>Add User</h1>

<%= form_with(model: @user, data: { turbo: false }) do |f| %>
     <% if @user.errors.any? %>
        <h2><%= pluralize(@user.errors.size, 'error') %> prevented this product from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
     <% end %>
    <%= f.label :name%>
    <%= f.text_field :name ,class:"form-control"%><br><br>
    <%= f.label :email %>
    <%= f.email_field :email,class:"form-control"%><br><br>
    
    <%= f.submit({:class => 'btn btn-success'})%> 
<% end %>
<br>


<p><%= link_to "Back",index_path ,{:class => 'btn btn-danger'}%></p>
