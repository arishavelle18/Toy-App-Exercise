<% provide(:title,"Sign Up") %>

 <section class="vh-100">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 text-black">

          <div class="px-5 ms-xl-4">
            <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
            <span class="h1 fw-bold mb-0 "><%= "Spielzeug".upcase %></span>
          </div>

          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
            <%= form_with model:@user,url:register_path,method: :post,:html => { :style => 'width:30em;' },data:{turbo:true} do |f| %>
            

              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign Up</h3>
                 <%= render "layouts/form_error",:form => f %>
              <div class="form-outline mb-4 form-floating">
                <input type="name" class="form-control" id="floatingName" name="user[name]" placeholder="name@example.com">
                <label for="floatingName">Name</label>
              </div>
              <div class="form-outline mb-4 form-floating">
                <input type="email" class="form-control" id="floatingEmail" name="user[email]" placeholder="name@example.com">
                <label for="floatingEmail">Email address</label>
              </div>

              <div class="form-outline mb-4 form-floating">
                 <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="user[password]">
                 <label for="floatingPassword">Password</label>    
              </div>
               <div class="form-outline mb-4 form-floating">
                 <input type="password" class="form-control" id="floatingPassword" placeholder="Confirm Password" name="user[confirm_password]">
                 <label for="floatingPassword">Confirm Password</label>    
              </div>

              <div class="pt-1 mb-4">
                <%= f.submit("Sign Up",{:class => "btn btn-info btn-lg btn-block"})%>
               
              </div>
              <p> Already have an account? <%= link_to "Login here",login_path,:class=>"link-info" %></p>
            
            <% end %>
            
          </div>
        </div>
        <div class="col-sm-6 px-0 d-flex d-sm-block">
            <%= image_tag("halloween.jpg",alt:"Minion",:class=>'w-100 h-100 vh-100" style="object-fit: cover; object-position: left')%>
            </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
